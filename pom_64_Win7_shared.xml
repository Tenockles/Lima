    <groupId>fr.soleil.lib</groupId>
	<artifactId>LimaCore-${aol}-shared-${mode}</artifactId>
    <version>1.7.10</version>

    <packaging>nar</packaging>
    <name>LimaCore</name>
    <description>Library for IMage Acquisition</description>

    <profiles>    
        <profile>
            <id>Windows7_x64</id>
